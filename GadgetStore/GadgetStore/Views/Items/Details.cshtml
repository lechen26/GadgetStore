@model GadgetStore.Models.ItemModel
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=323918851115935&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Details <small>@Model.Name</small>
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <img class="img-responsive" src="http://placehold.it/400x400" alt="">
            <!--<img src="@Url.Content(@Model.PhotoUrl)" />-->
        </div>

        <div class="col-md-8">
            <h3>Product Details</h3>
            <ul>
                <li>Price: @Model.Price</li>
                <li>Description: @Model.Description</li>
                <li>Manufucture: @ViewBag.ManufuctureID</li>
                <li>Purchased: @ViewBag.OrdersAmmount times</li>
                <li>Category: @Html.ActionLink((string)@ViewBag.Category, null, null, null, new { href = Request.UrlReferrer })</li>
            </ul>
            <i id="btn-custom" class="btn btn-default"><i class="fa fa-shopping-cart"></i> @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ItemId }, "")</i>
        </div>
    </div>
</div>

<div class="fb-share-button" data-href="@Url.Content(@Model.ItemId)" data-width="50" data-layout="icon_link"></div>