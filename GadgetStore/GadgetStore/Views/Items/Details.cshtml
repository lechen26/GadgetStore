@model GadgetStore.Models.ItemModel

<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Details <small>@Model.Name</small> 
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <img class="full-img" src="@Url.Content(@Model.PhotoUrl)" />
        </div>

        <div class="col-md-8">
            <h3>Product Details</h3>
            <ul>
                <li>Price: @Model.Price</li>
                <li>Description: @Model.Description</li>
                <li>Manufucture: @ViewBag.ManufuctureID</li>
                <li>Purchased: @ViewBag.OrdersAmmount times</li>
                <li>Category: @Html.ActionLink((string)@ViewBag.Category, null, null, null, new { href = Request.UrlReferrer })</li>
            </ul>
            <!-- blat in testing... -->
            <i id="btn-custom" class="btn btn-default"><i class="fa fa-shopping-cart"></i> @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ItemId }, "")</i> <i class="facebook-share">@LinkShare.GetHtml(" ", linkSites: new[] { LinkShareSite.Facebook })</i>
        </div>
    </div>
</div>