@model IEnumerable<GadgetStore.Models.ItemModel>

<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Chart
                <small>Chart description</small>
            </h1>
        </div>
    </div>
    <div class="row">

        <div class="col-md-4">
            <img class="img-responsive" src="http://placehold.it/400x400" alt="">
        </div>

        <div class="col-md-8">
            <h3>Description</h3>
            <p>pushpush</p>
        </div>

    </div>

    <!-- Header -->
    <div class="row">
        <h1 class="page-header">
            Items
        </h1>
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <!--<img class="img-responsive" src="@Url.Content(@item.PhotoUrl)" />-->
                    <img src="http://placehold.it/320x150" alt="">
                    <div class="caption">
                        <h4 class="pull-right">$@item.Price</h4>
                        <h4>@item.Name</h4>
                        <p>@Html.ActionLink("See more details.", "Details", new { id = item.ItemId })</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- /.row -->
</div>
