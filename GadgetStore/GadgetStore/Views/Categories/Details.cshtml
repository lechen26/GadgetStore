@model GadgetStore.Models.CategoryModel
 
<!-- Page Content -->
<div class="container">

    <!-- Header -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @Model.Name Category <small>@Model.Description</small>
            </h1>
            @foreach (var item in ViewBag.CategoriesItems)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img class="preview-img img-responsive" src="@Url.Content(@item.PhotoUrl)" />
                        <div class="caption">
                            <h4 class="pull-right">$@item.Price</h4>
                            <h4>@Html.ActionLink((string)item.Name, "../Items/Details", new { id = (Object)item.ItemId })</h4>
                            <p class="text-center">
                                <i id="btn-custom" class="btn btn-default"><i class="fa fa-shopping-cart"></i> @Html.ActionLink("Buy Now", "AddToCart", "ShoppingCart", new { id = item.ItemId }, "")</i>
                                <i id="btn-custom" class="btn btn-default"><i class="fa fa-info-circle"></i> @Html.ActionLink("More Info", "Details", "Items", new { id = item.ItemId }, "")</i>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    <!-- /.row -->
</div>