@model IEnumerable<GadgetStore.Models.CategoryModel>

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Categories
            </h1>
        </div>
        @foreach (var cat in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="portfolio-item">
                    <div class="manfacture-logo"><img src="@Url.Content(@cat.PhotoUrl)"></div>
                    <div class="caption">
                        <h4>@cat.Name</h4>
                        <i id="btn-custom" class="btn btn-default"><i class="fa fa-tag"></i> @Html.ActionLink("See items", "Details", new { id = cat.CategoryId })</i>
                    </div>
                    <br />
                </div>
            </div>
        }
    </div>
    <!-- /.row -->
</div>