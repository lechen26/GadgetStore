@{
    ViewBag.Title = "Home Page";
}


<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Welcome to our Gadget Store</div>
            <a href="/Items" class="btn btn-xl">Shop Now</a>
            <div class="row">
                <a href="#services" class="btn btn-circle btn-circle-white scorller page-scroll">
                    <i class="fa fa-angle-double-down animated bounce"></i>
                </a>
            </div>
        </div>
    </div>
</header>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=323918851115935&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
