@model IEnumerable<GadgetStore.Models.ManufactureModel>

<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Chart
                <small>Chart description</small>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <img class="img-responsive" src="http://placehold.it/400x400" alt="">
        </div>
        <div class="col-md-8">
            <h3>Description</h3>
            <p>pushpush</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Manufactures
            </h1>
        </div>
        @foreach (var manufa in Model)
        {
            <div class="col-lg-3 col-sm-3 text-center">
                <!--<img class="img-responsive" src="@Url.Content(@manufa.PhotoUrl)" />-->
                <img class="img-circle img-responsive img-center" src="http://placehold.it/200x200" alt="">
                <h3>
                    @manufa.Name
                <small></small>
            </h3>
            <p>@Html.ActionLink("See more details.", "Details", new { id = manufa.ManufactureId })</p>
        </div>
        }
    </div>
    <!-- /.row -->
</div>