@model IEnumerable<GadgetStore.Models.ManufactureModel>

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Summary
                <small>Number of items per manfacture</small>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
             <div class="chart-center">
                @{Html.RenderAction("ManufChart", "Manufactures");} 
              </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Manufactures
            </h1>
        </div>
        @using (Html.BeginForm("Index", "Manufactures", FormMethod.Get))
        {
            <div class="container" id="search-bar">
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        <div class="input-group">
                            <input style="top:0; left:-1px;" type="text" class="form-control" name="ManuNameSearch" placeholder="Search..." id="searchString">

                            <span style="left: -1px;" class="input-group-btn">
                                <button class="btn btn-info" type="submit"><span class="fa fa-search"></span></button>
                            </span>
                            <span style="left: -1px;" class="input-group-btn">
                                <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("Index", "Manufactures")'"><span class="fa fa-close"></span></button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
        @foreach (var manufa in Model)
        {
            <div class="col-sm-3 col-lg-3 col-md-3">
                <div class="portfolio-item">
                    <div class="manfacture-logo"><img src="@Url.Content(@manufa.PhotoUrl)"></div>
                    <div class="caption">
                        <h4>@manufa.Name</h4>
                        <i id="btn-custom" class="btn btn-default"><i class="fa fa-info-circle"></i> @Html.ActionLink("More Info", "Details", new { id = manufa.ManufactureId })</i>
                    </div>
                    <br />
                </div>
            </div>
        }
    </div>
    <!-- /.row -->
</div>