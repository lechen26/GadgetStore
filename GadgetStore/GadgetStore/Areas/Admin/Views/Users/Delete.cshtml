@model GadgetStore.Models.UserProfile 

@{Html.RenderPartial("../DashBoard/index");}

<div class="col-md-12">
    <div class="admin-form">
        <h4>Are you sure you want to delete this?</h4>
        <br />
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.UserId)</label>
            @Html.DisplayFor(model => model.UserId)
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.UserName)</label>
            @Html.DisplayFor(model => model.UserName)
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.EmailAddress)</label>
            @Html.DisplayFor(model => model.EmailAddress)
        </div>
        @using (Html.BeginForm())
        {
            <div class="buttons">
                <input type="submit" class="btn btn-danger" value="delete" />
                <form action="@Url.Action("index", "Users", new { area = "" })">
                    <input type="submit" class="btn btn-danger" value="cancel">
                </form>
            </div>
        }
    </div>
</div>