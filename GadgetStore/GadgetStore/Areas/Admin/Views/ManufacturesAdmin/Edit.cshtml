@model GadgetStore.Models.ManufactureModel

@{Html.RenderPartial("../DashBoard/index");}


<div class="col-md-9">  
    <p>
        @using (Html.BeginForm())     
        {    
            @Html.HiddenFor(model => model.ManufactureId)
            <div class="form">
        
                    <p class="inline-field">
                        <label>Category Name</label>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => Model.Name)
                    </p>        
                    <p class="inline-field">
                        <label>Description for Category</label>
                        @Html.TextBoxFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </p>        
                    <p class="inline-field">
                        <label>Url Path for Description's Photo</label>
                        @Html.TextBoxFor(model => model.PhotoUrl)
                        @Html.ValidationMessageFor(model => model.PhotoUrl)
                    </p>
                    <div class="buttons">                
                        <input type="submit" class="button" value="submit" />
                        <a href="@Url.Action("index", "ManufacturesAdmin", new { area = "" })">
                            <button>Cancel</button>
                        </a> 
                    </div>        
            </div>
        }
    </p>
</div>
</div>
</div>