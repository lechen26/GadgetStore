@model GadgetStore.Models.ManufactureModel

@{Html.RenderPartial("../DashBoard/index");}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.ManufactureId)
                <div class="admin-form">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => Model.Name)
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextBoxFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        @Html.TextBoxFor(model => model.PhotoUrl)
                    </div>
                    <div class="buttons">
                        <input type="submit" class="btn btn-success" value="save" />
                        <form action="@Url.Action("index", "ManufacturesAdmin", new { area = "" })">
                            <input type="submit" class="btn btn-danger" value="cancel">
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>