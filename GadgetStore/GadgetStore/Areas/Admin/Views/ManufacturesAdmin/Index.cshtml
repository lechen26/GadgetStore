@model IEnumerable<GadgetStore.Models.ManufactureModel>
@{
    ViewBag.Title = "Manufactures";
}
<div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Admin
                    <small>dashboard</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">Users</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-md-3">
                <div class="list-group">                      
                    <a href="Admin/Users" class="list-group-item">Users Management</a>                        
                    <a href="Admin/ItemsAdmin" class="list-group-item">Items</a>
                    <a href="Admin/CategoriesAdmin" class="list-group-item">Categories</a>
                    <a href="Admin/ManufacturesAdmin" class="list-group-item">Manufactures</a>                 
                </div>
            </div>            
            <!-- Content Column -->
            <div class="col-md-9">     
            <p>
                @using (Html.BeginForm("Index", "ManufacturesAdmin", FormMethod.Get))
                {
                   <p> Search: @Html.TextBox("SearchString") <br />
                    <input type="submit" value="Filter" />  
                    <input type="button" value="Clear" onclick="location.href='@Url.Action("Index", "ManufacturesAdmin")'"/>
                   </p>                 
                }   
                  @Html.ActionLink("Create New", "Create")
            </p>                
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ManufactureId)
                    </th>  
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>  
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>  
                    <th>
                        @Html.DisplayNameFor(model => model.PhotoUrl)
                    </th>  

                    <th></th>
                </tr>

            @foreach (var cat in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelCat => cat.ManufactureId)
                    </td>    
                    <td>
                        @Html.DisplayFor(modelCat => cat.Name)
                    </td>    
                    <td>
                        @Html.DisplayFor(modelCat => cat.Description)
                    </td>     
                    <td>
                        @Html.DisplayFor(modelCat => cat.PhotoUrl)
                    </td>     
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=cat.ManufactureId }) |            
                        @Html.ActionLink("Delete", "Delete", new { id=cat.ManufactureId })
                    </td>
                    </tr>
            }   
            </table>     
      
                    
                <a href="@Url.Action("index", "Admin", new { area = "" },null)"
                    <button>Back to Admin DashBoard</button>
                </a>            
          </div>
            </div>


