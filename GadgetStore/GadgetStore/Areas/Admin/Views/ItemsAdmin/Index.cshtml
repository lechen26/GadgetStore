@model IEnumerable<GadgetStore.Models.ItemModel>    
@{
    ViewBag.Title = "Items";
}

@*@{Html.Partial("/Areas/Admin/Views/DashBoard/_DashBoardPartial.cshtml");
@{Html.RenderPartial("../DashBoard/index");}
}*@

<div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Admin
                    <small>dashboard</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="index.html">Home</a>
                    </li>
                    <li class="active">Users</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <div class="col-md-3">
                <div class="list-group">                      
                    <a href="../Users" class="list-group-item">Users Management</a>                        
                    <a href="Admin/ItemsAdmin" class="list-group-item">Items</a>
                    <a href="Admin/CategoriesAdmin" class="list-group-item">Categories</a>
                    <a href="Admin/ManufacturesAdmin" class="list-group-item">Manufactures</a>                 
                </div>
            </div>            
        <!-- Content Column -->
        <div class="col-md-9">                       
            <p>
                @using (Html.BeginForm("Index", "ItemsAdmin", FormMethod.Get))
                {
                    <p> Search: @Html.TextBox("SearchString") <br />
                    <input type="submit" value="Filter" />
                    <input type="button" value="Clear" onclick="location.href='@Url.Action("Index", "ItemsAdmin")'"/>            
                    </p>                 
                }   
                @Html.ActionLink("Create New", "Create")                     
            </p>
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemId)
                    </th>  
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>  
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>                              
                </tr>                                                
                    @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemId)
                        </td>    
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>    
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>    
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id=item.ItemId }) |            
                            @Html.ActionLink("Delete", "Delete", new { id=item.ItemId })
                        </td>
                    </tr>            
                    }            
            </table>                            
            <a href="@Url.Action("index", "Admin", new { area = "" },null)"
                <button>Back to Admin DashBoard</button>
            </a>                             
        </div>
 