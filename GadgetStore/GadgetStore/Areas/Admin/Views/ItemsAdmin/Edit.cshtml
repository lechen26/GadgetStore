@model GadgetStore.Models.ItemModel

@{Html.RenderPartial("../DashBoard/index");}

<div class="col-md-9">  
        @using (Html.BeginForm())     
        {    
            @Html.HiddenFor(model => model.ItemId)
            @Html.HiddenFor(model => model.ManufactureId)
            @Html.HiddenFor(model => model.CategoryId)
            <div class="admin-form">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => Model.Name)
                        </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextBoxFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        @Html.TextBoxFor(model => model.PhotoUrl)
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        @Html.TextBoxFor(model => model.Price)
                    </div>
                    <div class="buttons">
                        <input type="submit" class="btn btn-primary btn-save" value="save" />
                        <form action="@Url.Action("index", "ItemsAdmin", new { area = "" })">
                            <input type="submit" class="btn btn-primary btn-cancel" value="cancel">
                        </form>
                    </div>
            </div>
        }
</div>
