@model GadgetStore.Models.ItemModel

@{Html.RenderPartial("../DashBoard/index");}


<div class="col-md-9">  
    <p>
        @using (Html.BeginForm())     
        {    
            @Html.HiddenFor(model => model.ItemId)
            @Html.HiddenFor(model => model.ManufactureId)
            @Html.HiddenFor(model => model.CategoryId)
            <div class="form">
        
                    <p class="inline-field">
                        <label>Item Name</label>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => Model.Name)
                    </p>        
                    <p class="inline-field">
                        <label>Description for Item</label>
                        @Html.TextBoxFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </p>        
                    <p class="inline-field">
                        <label>Url Path for Item's Photo</label>
                        @Html.TextBoxFor(model => model.PhotoUrl)   
                    </p>   
                    <p class="inline-field">
                        <label>Price for Item</label>
                        @Html.TextBoxFor(model => model.Price)   
                    </p>    
                    <div class="buttons">                
                        <input type="submit" class="button" value="submit" />              
                        <a href="@Url.Action("index", "ItemsAdmin", new { area = "" })">
                            <button>Cancel</button>
                        </a>        
                    </div>                          
            </div>
        }
    </piv>
</div>
</div>
</div>
