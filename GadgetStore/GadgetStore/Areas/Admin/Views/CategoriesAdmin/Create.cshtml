@model GadgetStore.Models.CategoryModel


@{Html.RenderPartial("../DashBoard/index");}
<div class="col-md-12">  
        @using (Html.BeginForm())     
        {    
            @Html.ValidationSummary(true)
            <div class="admin-form">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(model => model.Name)
                        @Html.ValidationMessageFor(model => Model.Name)
                        </div>
                    <div class="form-group">
                        <label>Description</label>
                        @Html.TextBoxFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        @Html.TextBoxFor(model => model.PhotoUrl)
                        @Html.ValidationMessageFor(model => model.PhotoUrl)
                    </div>
                    <div class="buttons">
                        <input type="submit" class="btn btn-success" value="create" />
                        <form action="@Url.Action("index", "CategoriesAdmin", new { area = "" })">
                            <input type="submit" class="btn btn-danger" value="cancel">
                        </form>
                    </div>
            </div>         
        }
</div>