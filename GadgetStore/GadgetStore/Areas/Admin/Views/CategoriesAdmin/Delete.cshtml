@model GadgetStore.Models.CategoryModel 


@{Html.RenderPartial("../DashBoard/index");}

<div class="col-md-12">  
    <div class="admin-form">
        <h4>Are you sure you want to delete this?</h4> <h6>Note: Deleting a Category will delete also all Items related</h6>
        <br />
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.CategoryId)</label>
            @Html.DisplayFor(model => model.CategoryId)
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Name)</label>
            @Html.DisplayFor(model => model.Name)
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Description)</label>
            @Html.DisplayFor(model => model.Description)
        </div>
        @using (Html.BeginForm())
        {
            <div class="buttons">
                <input type="submit" class="btn btn-danger" value="delete" />
                <form action="@Url.Action("index", "CategoriesAdmin", new { area = "" })">
                    <input type="submit" class="btn btn-danger" value="cancel">
                </form>
            </div>
        }
    </div>
</div>